<div class="index-item">
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%= render '/books/user_info', user: current_user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
     <h2>Users</h2>

     <table class="table table-hover table-inverse">
      <thead>
       <tr>
        <th style="width: 5%">image</th>
        <th style="width: 25%">name</th>
        <th></th>
        <th colspan="3"></th>
       </tr>
      </thead>

      <tbody>
       <% @users.each do |user| %>
       <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to user_path(user.id) do %>Show<% end %></td>
       </tr>
       <% end %>
      </tbody>
     </table>
    </div>

  </div>
</div>
</div>