<div class="user-edit">
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="user_name">Name</label><br>
        <%= f.text_field :name, id:"user_name", :size => "55" %>
      </div>
      <div class="form-group">
        <label for="user_image">Image</label>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for="user_introducion">Introduction</label><br>
        <%= f.text_area :introducion, id:"user_introducion", :size => "55" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", :class => "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>
